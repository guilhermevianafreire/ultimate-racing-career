<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.glyphfont.Glyph?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="mainPane"
            fx:controller="br.tec.gvfsolucoes.ultimateracingcareer.conttroller.MainController"
            prefHeight="480.0"
            prefWidth="854.0"
            styleClass="content"
            stylesheets="@main.css"
            >
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Applications">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Home" onAction="#openApplicationHome">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="HOME"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Calendar">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="CALENDAR"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Championships">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="TROPHY"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Manufactures">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="WRENCH"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Used Market">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="SEARCH"/>
                            </graphic>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Configuration">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Driver" onAction="#openConfigurationDriver">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="USER"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Regions">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="GLOBE"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Simulators">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="GEARS"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Tracks">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="ROAD"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Vehicles">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="TRUCK"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Championships">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="TROPHY"/>
                            </graphic>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Help">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="QUESTION_CIRCLE"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="About">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="INFO_CIRCLE"/>
                            </graphic>
                        </MenuItem>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
