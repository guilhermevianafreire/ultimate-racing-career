<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox
        xmlns:fx="http://javafx.com/fxml"
        xmlns="http://javafx.com/javafx"
        fx:controller="br.tec.gvfsolucoes.ultimateracingcareer.conttroller.MainController"
        alignment="CENTER"
        spacing="10.0"
        prefHeight="400.0" prefWidth="400.0"
        stylesheets="@main.css"
        styleClass="content"
>
    <Label text="Counter" styleClass="title"/>
    <Label fx:id="counterNumber" text="0" styleClass="number"/>
    <HBox alignment="CENTER"
          spacing="10.0">
        <Button onAction="#onDecrementButtonClick" text="-" styleClass="button, button-decrement"/>
        <Button onAction="#onIncrementButtonClick" text="+" styleClass="button, button-increment"/>
    </HBox>
</VBox>
