<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox
        xmlns:fx="http://javafx.com/fxml"
        xmlns="http://javafx.com/javafx"
        fx:controller="br.tec.gvfsolucoes.ultimateracingcareer.conttroller.SplashController"
        alignment="CENTER"
        spacing="10.0"
        prefHeight="400.0" prefWidth="400.0"
        stylesheets="@splash.css"
        styleClass="content"
>
    <Label text="Ultimate Racing Career" styleClass="text, title"/>
    <Label text="Loading. Pleas wait..."  styleClass="text"/>
    <HBox
            alignment="CENTER"
            spacing="10.0"
    >
        <Label fx:id="step" styleClass="text"/>
    </HBox>
    <ProgressBar fx:id="loadingProcessBar" progress="0.0" scaleX="3"/>
</VBox>
